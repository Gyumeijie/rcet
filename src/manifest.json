{
  "manifest_version": 2,

  "name": "Getting started example",
  "description": "This is a basic starter kit for extensions",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "ui.html"
  },

  "devtools_page": "devtools.html",
  "background": {
    "scripts": ["background.js"]
  },

  "permissions": [
    "notifications", "contextMenus", "tabs", "storage", "<all_urls>", "activeTab"
  ]
}
